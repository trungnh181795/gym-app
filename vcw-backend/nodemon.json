{
  "watch": ["src/**/*.ts", "src/**/*.js"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts", 
    "src/**/*.spec.ts", 
    "dist/**/*", 
    "node_modules/**/*",
    "storage/**/*",
    "config/**/*.pem"
  ],
  "exec": "ts-node src/utils/issuer-keygen.ts && ts-node src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "PORT": "3000"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false
}