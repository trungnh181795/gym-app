{
  "watch": ["src/**/*.ts"],
  "ext": "ts",
  "ignore": [
    "src/**/*.test.ts", 
    "src/**/*.spec.ts", 
    "node_modules/**/*",
    "storage/**/*",
    "config/**/*.pem"
  ],
  "exec": "npm run build && npm start",
  "env": {
    "NODE_ENV": "development",
    "PORT": "3000"
  },
  "delay": 2000,
  "verbose": true,
  "restartable": "rs",
  "colours": true
}